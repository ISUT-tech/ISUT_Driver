        android:layout_width="match_parent"
        android:layout_height="@dimen/heightsize_100dp"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/heightsize_10dp"
        android:layout_marginLeft="@dimen/heightsize_10dp"
        android:layout_marginRight="@dimen/heightsize_10dp"
        android:paddingBottom="0dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:paddingBottom="5dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardElevation="@dimen/cardview_elevation">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp">

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"

                            android:layout_height="0.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"

                            android:background="#afafaf"/>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.balysv.materialripple.MaterialRippleLayout
                                android:id="@+id/ripple1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                app:mrl_rippleColor="#d6d4d4"
                                app:mrl_rippleDuration="450"
                                app:mrl_rippleFadeDuration="220"
                                app:mrl_rippleHover="true"

                                >

                                <Button
                                    android:id="@+id/myCLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#00ff0000"
                                    android:ellipsize="end"
                                    android:gravity="left|center_vertical"
                                    android:maxLines="1"

                                    android:paddingBottom="5dp"
                                    android:paddingLeft="@dimen/button_padding1"
                                    android:paddingTop="5dp"
                                    android:hint="Start Location"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/nml_dv_txt"
                                    android:visibility="visible"/>


                            </com.balysv.materialripple.MaterialRippleLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"

                                >

                                <com.github.vipulasri.timelineview.TimelineView
                                    android:id="@+id/time_marker2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:line="@color/colored"
                                    app:linePadding="5dp"
                                    app:lineSize="1dp"


                                    app:markerSize="10dp"/>
                            </RelativeLayout>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.balysv.materialripple.MaterialRippleLayout
                                android:id="@+id/ripple2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                app:mrl_rippleColor="#d6d4d4"
                                app:mrl_rippleDuration="450"
                                app:mrl_rippleFadeDuration="220"
                                app:mrl_rippleHover="true"

                                >

                                <Button
                                    android:id="@+id/myCLocation2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#00ff0000"
                                    android:ellipsize="end"
                                    android:gravity="left|center_vertical"
                                    android:maxLines="1"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="@dimen/button_padding1"
                                    android:paddingTop="5dp"
                                    android:hint="Drop Location"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/nml_dv_txt"/>
                            </com.balysv.materialripple.MaterialRippleLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"

                                >

                                <com.github.vipulasri.timelineview.TimelineView
                                    android:id="@+id/time_marker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:line="@color/colored"
                                    app:linePadding="5dp"
                                    app:lineSize="1dp"

                                    app:marker="@color/colored"
                                    app:markerSize="10dp"/>
                            </RelativeLayout>

                        </RelativeLayout>
                    </LinearLayout>


